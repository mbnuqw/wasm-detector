{
  "manifest_version": 2,
  "name": "WebAssembly Detector",
  "version": "1.0.0",

  "description": "Detects loading of WebAssembly file.",
  "homepage_url": "https://github.com/mbnuqw/wasm-detector",
  "icons": {
    "48": "./assets/icons/wa-48.png",
    "96": "./assets/icons/wa-96.png"
  },
  "permissions": ["webRequest", "<all_urls>"],

  "page_action": {
    "browser_style": true,
    "default_icon": {
      "19": "./assets/icons/wa-16_text.png",
      "38": "./assets/icons/wa-32_text.png"
    },
    "default_title": "WebAssembly Detected"
  },

  "background": {
    "scripts": ["background/main.js"]
  }
}
